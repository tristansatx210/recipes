<%= render 'shared/page_title', title: "showing all chefs" %>

<div align="center">
  <%= will_paginate  %>
  <% @chefs.each do |chef| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(chef), chef_path(chef) %></li>
          <li class="chef-title"><%= link_to chef.chefname.capitalize, 
                                         chef_path(chef) %></li>
          <li><small>
            <%= pluralize(chef.recipes.count, "recipe") if chef.recipes %>
          </small></li>
          <% if logged_in? && current_chef.admin? && !chef.admin? %>
          <li><%= link_to "Delete Chef", chef_path(chef), method: :delete,
                data: {confirm: "Are you sure you would like to delete Chef and all Recipes?"} %></li>
          <% end %>
        </div>
      </div>
    </ul>    
  <% end %>
  <%= will_paginate  %>
</div>